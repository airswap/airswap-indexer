{
  "compilerOptions": {
    "allowJs": true,
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "target": "es2017",
    "strict": true,
    "declaration": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/@airswap/*"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
